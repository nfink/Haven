@using Haven;

@foreach (Player player in @Model)
{
    <div playerid="@player.Id">
        @foreach (SafeHavenCard safeHavenCard in player.SafeHavenCards)
        {
            <div class="tile-small safehavencard" details="@safeHavenCard.Details">
                <div class="tile-content"
                     style="text-align: center;">
                    <div style="display: inline-block;
                                vertical-align: middle;
                                line-height: 70px;">@safeHavenCard.Name</div>
                </div>
            </div>
        }

        @foreach (NameCard nameCard in player.NameCards)
        {
            <div class="tile-small namecard" details="@nameCard.Details">
                <div class="tile-content"
                     style="text-align: center;">
                    <div style="display: inline-block;
                                vertical-align: middle;
                                line-height: 70px;">@nameCard.Name</div>
                </div>
            </div>
        }
    </div>
}