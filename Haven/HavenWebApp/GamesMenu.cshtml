@using Haven;

@foreach (Game game in @Model)
{
    <div class="tile fg-white bg-black" data-role="tile" onclick="LoadGame(@game.Id)">
        <div class="tile-content slide-down">
            <div class="slide">
                <div style="width: 100%;" class="image-container image-format-square">
                    <div class="frame">
                        <div style="width: 100%; height: 150px; background-image: url('@game.Board.Icon'); background-size: cover; background-repeat: no-repeat; border-radius: 0px;">
                        </div>
                    </div>
                </div>
            </div>
            <div class="slide-over op-cyan text-small padding10">
                @foreach (Player player in @game.Players)
                {
                    @player.Name<br/>
                }
            </div>
            <div class="tile-label">@game.Name</div>
        </div>
    </div>
}